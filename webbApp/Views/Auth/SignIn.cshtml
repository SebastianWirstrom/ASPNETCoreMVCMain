
@model SignInViewModel
@{
    ViewData["Title"] = "Sign in to your account";
}

<section class="signin">
    <div class="container">

        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
        {
            <div class="alert">
                @ViewData["ErrorMessage"]
            </div>
        }

        <form method="post" asp-action="SignIn" asp-controller="Auth" asp-route-ReturnUrl="@ViewData["ReturnUrl"]" novalidate>
            <h1>Welcome Back</h1>
            <p>Don't have an account? <a asp-action="SignUp" asp-controller="Auth">Sign up here.</a></p>

            <div class="form-content">
                
                <div id="email" class="input-group">
                    <span asp-validation-for="Email"></span>
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                </div>
                <div id="password" class="input-group">
                    <span asp-validation-for="Password"></span>
                    <label asp-for="Password"></label>
                    <input asp-for="Password" />
                </div>
                
                <div id="rememberMe" class="checkbox-group">
                    <div class="input-group">
                        <input asp-for="RememberMe" />
                        <label asp-for="RememberMe">
                            Remember me
                        </label>
                    </div>
                </div>
                <button id="btn-submit" class="btn-theme-s" type="submit">Sign In</button>
            </div>
        </form>
    </div>
</section>

@await Html.PartialAsync("_ValidationScriptPartial")
